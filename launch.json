{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Debug FastAPI (Network Access)",
      "type": "python",
      "request": "launch",
      "module": "uvicorn",
      "args": [
        "backend:app",
        "--host",
        "0.0.0.0",
        "--port",
        "8000",
        "--reload"
      ],
      "jinja": true,
      "env": {
        "PYTHONPATH": "${workspaceFolder}"
      },
      "console": "integratedTerminal",
      "cwd": "${workspaceFolder}",
      "python": "${workspaceFolder}\\.venv\\Scripts\\python.exe"
    }
  ]
}
