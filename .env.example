# =====================================================
# Variables de Entorno - AxiomServiceIA
# =====================================================
# Copiar este archivo a .env y completar con tus valores

# --- NOTIFICACIONES SLACK ---
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/WEBHOOK/URL

# --- NOTIFICACIONES TEAMS ---
TEAMS_WEBHOOK_URL=https://outlook.webhook.office.com/webhookb2/YOUR/WEBHOOK/URL

# --- NOTIFICACIONES JIRA ---
JIRA_BASE_URL=https://your-domain.atlassian.net
JIRA_API_TOKEN=your-api-token

# --- DATABASE ---
DATABASE_PATH=./axiom.db

# --- SERVIDOR ---
SERVER_HOST=0.0.0.0
SERVER_PORT=8000

# --- LOGGING ---
LOG_LEVEL=INFO

# --- FEATURES ---
ENABLE_FLOW_VALIDATION=true
ENABLE_FEEDBACK_SYSTEM=true
ENABLE_DIFF_DEDUPLICATION=true
